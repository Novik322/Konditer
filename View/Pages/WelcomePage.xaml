<Page x:Class="Konditer_FigmaProject.View.Pages.WelcomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Konditer_FigmaProject.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="836" d:DesignWidth="382"
      Title="WelcomePage">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="125" />
            <RowDefinition Height="200" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <Image Grid.Column="2" Margin="15" Source="/View/Picture/logo.png" />
            <TextBlock Grid.Column="1" Text="Профиль" TextWrapping="Wrap"  VerticalAlignment="Center" Foreground="White" HorizontalAlignment="Center" FontSize="22"/>
            <TextBlock Grid.Column="0" Text="≡" VerticalAlignment="Center" Foreground="White" HorizontalAlignment="Center" FontSize="50"/>
        </Grid>
        
    </Grid>
</Page>
